{
  "name": "backend",
  "version": "1.0.0",
  "description": "Web Application to connect to DB and manage T&C acceptance",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "npx jest",
    "dev": "nodemon",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prettier:check": "prettier --check **",
    "prettier:write": "prettier --write **",
    "format": "prettier --write 'src/**/*.{js,ts,json,md}'",
    "prepare": "cd .. && husky backend/.husky"
  },
  "author": "Martin Posso",
  "license": "ISC",
  "dependencies": {
    "express": "^4.21.2",
    "mongoose": "^8.9.5",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@jest/globals": "^29.7.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.8",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.21.0"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "prettier --list-different",
      "npm run prettier:write",
      "npm run lint:fix",
      "git add ."
    ],
    "**/__tests__/**/?(*.)+(spec|test).ts?(x)": [
      "npm run test"
    ],
    "*.md": [
      "prettier --write",
      "git add ."
    ]
  }
}
